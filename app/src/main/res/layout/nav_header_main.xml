<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/redSoft"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="96dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:src="@drawable/johnsnow_icon"
        android:layout_gravity="center_horizontal"
        android:id="@+id/navHeaderImageView"/>



    <TextView
        android:id="@+id/navHeaderNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="John Snow"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/navHeaderAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winterfell, North wall"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>
